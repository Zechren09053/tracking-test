-- Log table for regular users (ticket holders)
CREATE TABLE user_login_logs (
  log_id INT AUTO_INCREMENT PRIMARY KEY,
  user_id INT NOT NULL,
  login_time DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP,
  logout_time DATETIME DEFAULT NULL,
  ip_address VARCHAR(45) NOT NULL,
  device_info VARCHAR(255),
  login_status ENUM('success', 'failed') NOT NULL,
  failure_reason VARCHAR(255) DEFAULT NULL,
  session_id VARCHAR(255),
  FOREIGN KEY (user_id) REFERENCES users(id) ON DELETE CASCADE
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_general_ci;

-- Log table for staff users
CREATE TABLE staff_login_logs (
  log_id INT AUTO_INCREMENT PRIMARY KEY,
  staff_id INT NOT NULL,
  login_time DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP,
  logout_time DATETIME DEFAULT NULL,
  ip_address VARCHAR(45) NOT NULL,
  device_info VARCHAR(255),
  login_status ENUM('success', 'failed') NOT NULL,
  failure_reason VARCHAR(255) DEFAULT NULL,
  session_id VARCHAR(255),
  action_performed VARCHAR(255) DEFAULT NULL,
  FOREIGN KEY (staff_id) REFERENCES staff_users(staff_id) ON DELETE CASCADE
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_general_ci;

-- Indexes for better query performance
CREATE INDEX idx_user_login_time ON user_login_logs(login_time);
CREATE INDEX idx_user_login_status ON user_login_logs(login_status);
CREATE INDEX idx_staff_login_time ON staff_login_logs(login_time);
CREATE INDEX idx_staff_login_status ON staff_login_logs(login_status);

-- Optional: Create a view that combines both log tables for unified reporting
CREATE VIEW all_login_logs AS
  SELECT 
    'user' AS user_type,
    u.log_id,
    u.user_id AS id,
    us.full_name AS name,
    u.login_time,
    u.logout_time,
    u.ip_address,
    u.device_info,
    u.login_status,
    u.failure_reason
  FROM 
    user_login_logs u
    JOIN users us ON u.user_id = us.id
  UNION ALL
  SELECT 
    'staff' AS user_type,
    s.log_id,
    s.staff_id AS id,
    CONCAT(st.first_name, ' ', st.last_name) AS name,
    s.login_time,
    s.logout_time,
    s.ip_address,
    s.device_info,
    s.login_status,
    s.failure_reason
  FROM 
    staff_login_logs s
    JOIN staff_users st ON s.staff_id = st.staff_id;
